<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>

                    <solid android:color="@color/icons"></solid>
                    <padding android:bottom="2dp" android:left="12dp" android:right="16dp" android:top="2dp" />
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="@color/edittext_border" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@drawable/drop_down_arrow" />

            </item>
            <item>
                <bitmap android:gravity="left" android:src="@drawable/date_range" />
            </item>
        </layer-list>
    </item>

</selector>